{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        },
        {
            "src": "dist/**",
            "use": "@vercel/static"
        }
    ],
      "rewrites": [
        { "source": "/(.*)","destination": "http://codex-mern.vercel.app/"},
        { "source": "/api/(.*)", "destination": "/index.js" },
        { "source": "/(.*)", "destination": "/index.js" }

    ]
}